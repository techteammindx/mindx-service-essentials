# Service behaviour (Docker profile)
NODE_ENV=development
TRANSPORT_PROTOCOLS=GRAPHQL,GRPC,KAFKA
DATA_SOURCE_DRIVERS=MONGO,KAFKA,GRPC
GRPC_SERVICE_URL=localhost:7777

# MongoDB Configuration (container network)
MONGO_ROOT_USER=root
MONGO_ROOT_PASSWORD=root
MONGO_DB_NAME=mindx_service_essentials
MONGO_URI=mongodb://root:root@mongo:27017/mindx_service_essentials?authSource=admin

# PostgreSQL Configuration (optional adapter)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=mindx_service_essentials
POSTGRES_URI=postgresql://postgres:postgres@postgres:5432/mindx_service_essentials

# Kafka Configuration
KAFKA_BROKERS=kafka:29092
KAFKA_CONSUMER_GROUP_ID=ping-service

# RabbitMQ Configuration
RABBITMQ_DEFAULT_USER=guest
RABBITMQ_DEFAULT_PASS=guest
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672
RABBITMQ_QUEUE_NAME=mindx_service_essentials

# Service Ports (exposed by compose)
MONGO_PORT=27017
POSTGRES_PORT=5432
KAFKA_PORT=9092
